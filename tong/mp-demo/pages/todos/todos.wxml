<view class="container">
  <van-cell-group>
    <van-field
      value="{{ todo }}"
      placeholder="请输入代办事项"
      border="{{false}}"
    />
  </van-cell-group>

  <van-divider contentPosition="center">以下是未完成的</van-divider>
  <!-- todos -->
  <van-swipe-cell wx:for="{{todos}}" wx:for-item="td" wx:for-index="indx" wx:key="*this" data-name="{{td.name}}" data-index="{{indx}}" data-id="{{td.id}}" right-width="{{ 65 }}" left-width="{{ 65 }}" async-close bind:open="handleTodo">
    <view slot="left">
      <van-button type="info">完成</van-button>
    </view>
    <van-cell-group>
      <van-cell title="{{td.name}}" />
    </van-cell-group>
    <view slot="right">
      <van-button type="danger">删除</van-button>
    </view>
  </van-swipe-cell>

  <van-divider contentPosition="center">以下是已完成的</van-divider>
  <!-- finishedTodos -->

  <van-cell-group wx:for="{{finishedTodos}}" wx:for-item="ft" wx:key="*this">
    <van-cell title="{{ft.name}}" />
  </van-cell-group>

</view>
